<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_splash"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin_lang"

            />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="220dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/md_logo"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/et_mobile"
            android:hint="Mobile Number"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/et_pass"
            android:inputType="textPassword"
            android:hint="Password"

            />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/green"
        android:textSize="15dp"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_login"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_forgot"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lv_divider">
        <TextView
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="9dp"
            android:foreground="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/black"
            android:text="Or"
            android:id="@+id/tv_or"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="6dp"
            android:foreground="@color/black" />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/red"
        android:textSize="15dp"
        android:text="New Register"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"

        android:id="@+id/btn_step_save"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right|bottom">

            <ImageView
                android:id="@+id/img_ind"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lion" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom">
            <ImageView
                android:id="@+id/img_pure"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/secure" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>