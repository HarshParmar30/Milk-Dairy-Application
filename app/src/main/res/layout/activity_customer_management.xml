<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.CustomerManagementActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar_dash_board"
        layout="@layout/customer_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_cust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sync_cust"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="10sp"
            android:layout_marginHorizontal="1dp"
            app:icon="@drawable/add"
            android:backgroundTint="@color/greenish"
            android:textStyle="bold"
            android:text="Add Customer"
            app:cornerRadius="7dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sync_cust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_contact_cust"
            app:layout_constraintStart_toEndOf="@+id/add_cust"
            android:layout_marginHorizontal="1dp"
            android:text="Sync Customer"
            android:textSize="10sp"
            app:icon="@drawable/sync"
            android:backgroundTint="@color/orangish"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="7dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_contact_cust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sync_cust"
            android:layout_marginHorizontal="1dp"
            android:text="Add From Contact"
            android:textSize="10sp"
            app:icon="@drawable/contact"
            android:backgroundTint="@color/blueish"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/off_white"
        android:queryHint="Search"
        android:layoutDirection="rtl"
        android:elevation="4dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/blueish">


        <TextView
            android:id="@+id/Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:elevation="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Rate"
            app:layout_constraintStart_toEndOf="@+id/Id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/MobileNo"
            app:layout_constraintStart_toEndOf="@+id/Name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No."
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/empty"
            app:layout_constraintStart_toEndOf="@+id/Rate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/MobileNo"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>